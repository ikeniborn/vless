# VLESS+Reality VPN - Telegram Bot Configuration
# Version: 1.0

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Bot Token (required)
# Get this from @BotFather on Telegram
# Example: BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefg
BOT_TOKEN=

# Admin Chat ID (required)
# Your Telegram user ID - send /start to @userinfobot to get it
# Example: ADMIN_CHAT_ID=123456789
ADMIN_CHAT_ID=

# =============================================================================
# WEBHOOK CONFIGURATION (Optional - for production deployment)
# =============================================================================

# Webhook URL (optional - leave empty for polling mode)
# Use for production deployment behind reverse proxy
# Example: WEBHOOK_URL=https://yourdomain.com/webhook/bot
WEBHOOK_URL=

# Webhook Port (default: 8443)
# Port for webhook server to listen on
WEBHOOK_PORT=8443

# =============================================================================
# BOT BEHAVIOR SETTINGS
# =============================================================================

# Debug Mode (true/false)
# Enable verbose logging for debugging
BOT_DEBUG=false

# Bot Name (displayed in messages)
BOT_NAME=VLESS VPN Manager

# Bot Description
BOT_DESCRIPTION=Remote management for VLESS+Reality VPN server

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin Verification (true/false)
# Require admin verification for sensitive operations
ADMIN_VERIFICATION=true

# Command Rate Limiting (requests per minute)
RATE_LIMIT_COMMANDS=30

# Session Timeout (minutes)
SESSION_TIMEOUT=60

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# System Alerts (true/false)
# Send notifications for system events
SYSTEM_ALERTS=true

# Backup Notifications (true/false)
# Notify when backups are created/restored
BACKUP_NOTIFICATIONS=true

# Update Notifications (true/false)
# Notify when system updates are available
UPDATE_NOTIFICATIONS=true

# Error Notifications (true/false)
# Send alerts for system errors
ERROR_NOTIFICATIONS=true

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable User Management Commands
ENABLE_USER_MANAGEMENT=true

# Enable Backup Commands
ENABLE_BACKUP_COMMANDS=true

# Enable System Maintenance Commands
ENABLE_MAINTENANCE_COMMANDS=true

# Enable System Update Commands
ENABLE_UPDATE_COMMANDS=true

# Enable Log Viewing Commands
ENABLE_LOG_COMMANDS=true

# Enable QR Code Generation
ENABLE_QR_CODES=true

# =============================================================================
# FILE PATHS AND DIRECTORIES
# =============================================================================

# User Database Path
USER_DB_PATH=/opt/vless/users/users.db

# Admin Database Path
ADMIN_DB_PATH=/opt/vless/config/bot_admins.db

# Backup Directory
BACKUP_DIR=/opt/vless/backups

# Log Directory
LOG_DIR=/opt/vless/logs

# QR Code Directory
QR_CODE_DIR=/opt/vless/qrcodes

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Monitoring Integration (future use)
MONITORING_ENABLED=false
MONITORING_WEBHOOK=

# Analytics Integration (future use)
ANALYTICS_ENABLED=false
ANALYTICS_TOKEN=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Bot Language (for future internationalization)
BOT_LANGUAGE=en

# Time Zone
TIME_ZONE=UTC

# Date Format
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Currency (for future billing features)
CURRENCY=USD

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (true/false)
# Enables additional debugging features
DEVELOPMENT_MODE=false

# Test Bot Token (for development)
# Use separate bot for testing
TEST_BOT_TOKEN=

# Test Admin ID (for development)
TEST_ADMIN_ID=

# =============================================================================
# EXAMPLE CONFIGURATION
# =============================================================================

# Uncomment and modify the following lines with your actual values:

# BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefg
# ADMIN_CHAT_ID=123456789
# WEBHOOK_URL=https://yourdomain.com/webhook/bot
# BOT_DEBUG=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Create a new bot with @BotFather on Telegram
# 2. Get your bot token and set BOT_TOKEN
# 3. Get your Telegram user ID and set ADMIN_CHAT_ID
# 4. For production, set up WEBHOOK_URL with your domain
# 5. Restart the bot service after configuration changes

# Commands to restart bot:
# sudo systemctl restart vless-vpn
# or
# sudo /opt/vless/deploy_telegram_bot.sh restart