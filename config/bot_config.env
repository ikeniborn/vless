# VLESS VPN Telegram Bot Configuration
# Copy this file to .env and update with your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_TELEGRAM_ID=YOUR_TELEGRAM_USER_ID_HERE

# Server Configuration
SERVER_IP=YOUR_SERVER_IP_HERE
DOMAIN=YOUR_DOMAIN_HERE
VLESS_PORT=443

# Paths Configuration
VLESS_DIR=/opt/vless
SCRIPTS_DIR=/home/ikeniborn/Documents/Project/vless/modules
CONFIG_DIR=/home/ikeniborn/Documents/Project/vless/config

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/vless/logs/telegram_bot.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
# Enable/disable certain features for security
ALLOW_CONFIG_DOWNLOAD=true
ALLOW_QR_GENERATION=true
ALLOW_USER_DELETION=true
ALLOW_SERVICE_RESTART=true
ALLOW_BACKUP_CREATION=true

# Rate Limiting
MAX_USERS_PER_ADMIN=100
RATE_LIMIT_COMMANDS=10  # Commands per minute
RATE_LIMIT_WINDOW=60    # Time window in seconds

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=24  # Hours

# Monitoring Configuration
MONITORING_ENABLED=true
ALERT_ON_HIGH_CPU=true
ALERT_ON_HIGH_MEMORY=true
ALERT_ON_LOW_DISK=true
ALERT_ON_SERVICE_DOWN=true

# CPU Alert threshold (percentage)
CPU_ALERT_THRESHOLD=85

# Memory Alert threshold (percentage)
MEMORY_ALERT_THRESHOLD=85

# Disk Alert threshold (percentage)
DISK_ALERT_THRESHOLD=90

# Network Configuration
NETWORK_INTERFACE=eth0
MONITOR_NETWORK_USAGE=true

# Docker Configuration
DOCKER_COMPOSE_FILE=/home/ikeniborn/Documents/Project/vless/config/docker-compose.yml
XRAY_CONTAINER_NAME=vless-xray
BOT_CONTAINER_NAME=vless-bot

# Feature Flags
ENABLE_INLINE_KEYBOARDS=true
ENABLE_QR_CODES=true
ENABLE_USER_STATISTICS=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_AUTO_RESTART=false

# Debug Configuration (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Time Zone
TIMEZONE=UTC

# Language/Locale
LOCALE=en_US.UTF-8
LANGUAGE=en

# Example values (DO NOT USE IN PRODUCTION):
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# ADMIN_TELEGRAM_ID=123456789
# SERVER_IP=1.2.3.4
# DOMAIN=example.com