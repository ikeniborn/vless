# Example Environment Configuration for VLESS VPN Telegram Bot
# Copy this file to .env and update with your actual values

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz-ExampleToken
ADMIN_TELEGRAM_ID=123456789

# Server Configuration
SERVER_IP=1.2.3.4
DOMAIN=yourdomain.com
VLESS_PORT=443

# System Paths
VLESS_DIR=/opt/vless
SCRIPTS_DIR=/home/ikeniborn/Documents/Project/vless/modules
CONFIG_DIR=/home/ikeniborn/Documents/Project/vless/config

# Logging
LOG_LEVEL=INFO
TIMEZONE=UTC

# Docker Configuration
COMPOSE_PROJECT_NAME=vless

# Security Settings
ALLOW_CONFIG_DOWNLOAD=true
ALLOW_QR_GENERATION=true
ALLOW_USER_DELETION=true
ALLOW_SERVICE_RESTART=true
ALLOW_BACKUP_CREATION=true

# Monitoring Thresholds
CPU_ALERT_THRESHOLD=85
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# Feature Flags
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_INLINE_KEYBOARDS=true
ENABLE_QR_CODES=true
ENABLE_USER_STATISTICS=true
ENABLE_SYSTEM_MONITORING=true